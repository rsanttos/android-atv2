<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:padding="16dp">
        <TextView
                android:text="CALCULADORA IMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"/>
        <TextView
                android:text="Peso: 0,0 kg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvPeso" android:textSize="18sp"/>
        <TextView
                android:text="Altura: 0,0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvAltura" android:textSize="18sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center">
            <Button
                    android:text="ALTERAR PESO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnPeso" android:layout_weight="1"/>
            <Button
                    android:text="ALTERAR ALTURA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnAltura" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="CALCULAR"
                android:layout_height="wrap_content" android:id="@+id/btnCalcular"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"/>
        <TextView
                android:text="RESULTADO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"/>
        <TextView
                android:text="Aperte o botÃ£o calcular!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvResultadoImc"
                android:gravity="center" android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvResultadoImcTexto"
                android:gravity="center"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>